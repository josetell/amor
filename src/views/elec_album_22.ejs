    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
     
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
            background-image: linear-gradient(to bottom, #ffffff, #f5f5f5);
        }

        .container {
            
            border:1cm;
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

        .header {
            margin-bottom: 5px;
        }

        .header h1 {
            font-size: 2rem;
            color: #d1548f;
            margin-bottom: 40px;
            font-weight: 200;
            letter-spacing: 1px;
        }

        .header h2 {
            font-size: 3rem;
            color: #b0306a;
            font-weight: bold;
            margin-bottom: 40px;
            text-transform: uppercase;
            letter-spacing: 3px;
        }

        .counter {
            border: 6px solid #d1548f; /* Borde azul */
            background-color: rgb(247, 244, 244);
            border-radius: 15px;
            padding: 20px;
            height: 350px;
            margin-bottom: 40px;
        }

        .counter-title {
            font-size: 1.2rem;
            color: #d1548f;
            margin-bottom: 15px;
            font-weight: 200;
        }

        .time-container {
            display: flex;
            justify-content: center;
            gap: 20px;
        }
        .imag_F {
            width: 27%; /* Ocupa el 50% del contenedor */
            height: auto; /* Mantiene la proporción */
        }

        .time-box {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .time-value {
            font-size: 2.5rem;
            font-weight: bold;
            color: #b0306a;
        }

        .time-label {
            font-size: 0.9rem;
            color: #d1548f;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .couple-title {
            
            font-size: 2rem;
            color: #d1548f;
            margin: 30px 0;
            font-weight: 300;
            letter-spacing: 2px;
        }

        .buttons-container {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-top: 40px;
        }

        .album-btn {
            background-color: #d1548f;
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 50px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 5px 15px rgba(208, 92, 144, 0.3);
        }

        .album-btn:hover {
            background-color: #b0306a;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(208, 92, 144, 0.4);
        }

        .album-btn svg {
            width: 20px;
            height: 20px;
            fill: white;
        }

        .heart-icon {
            position: absolute;
            opacity: 0.1;
            z-index: -1;
        }

        .heart-icon:nth-child(1) {
            top: 10%;
            left: 10%;
            font-size: 50px;
        }

        .heart-icon:nth-child(2) {
            bottom: 15%;
            right: 10%;
            font-size: 70px;
        }
    </style>
</head>
